alias top='btop'              # btop
alias cat='bat'               # Replace cat with bat
alias tofu='zathura'          # Zathura (PDF viewer)
alias pdf='mupdf-gl'          # mupdf-gl (PDF viewer)
alias ig='kitty +kitten icat' # Kitty image preview
alias x86='arch -x86_64 zsh'  # Run zsh in x86_64 mode on Apple Silicon
alias story='history | less'  # history | less
alias txtmd='for f in *.txt; do mv "$f" "${f%.txt}.md"; done' # Convert .txt to .md
