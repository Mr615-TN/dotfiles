{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "bg": "#282c34",
    "fg": "#bbc2cf",
    "red": "#ff6c6b",
    "orange": "#da8548",
    "green": "#98be65",
    "teal": "#4db5bd",
    "blue": "#51afef",
    "purple": "#c678dd",
    "cyan": "#46d9ff",
    "yellow": "#ecbe7b"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "p:fg",
          "background": "p:red",
          "template": "{{ if .Env.PNPPSHOST }} \uf8c5 {{ .Env.PNPPSHOST }} {{ end }}"
        },
        {
          "type": "text",
          "style": "powerline",
          "foreground": "p:fg",
          "background": "p:teal",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Env.PNPPSSITE }} \uf2dd {{ .Env.PNPPSSITE }}{{ end }}"
        },
        {
          "type": "text",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "foreground": "p:fg",
          "background": "p:teal",
          "template": "{{ if .Env.PNPPSSITE }}\u00A0{{ end }}"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "background": "p:purple",
          "foreground": "p:fg",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "background": "p:orange",
          "foreground": "p:fg",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "folder"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "p:green",
          "foreground": "p:bg",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " \u279c ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
          "type": "git"
        },

        // Python virtual environment
        {
          "type": "python",
          "style": "powerline",
          "background": "p:yellow",
          "foreground": "p:bg",
          "powerline_symbol": "\ue0b0",
          "template": " \ue235 {{ .Venv }} "
        },

        // Rust detection
        {
          "type": "rust",
          "style": "powerline",
          "background": "p:blue",
          "foreground": "p:bg",
          "powerline_symbol": "\ue0b0",
          "template": " \ue7a8 {{ .Full }} "
        },

        // NodeJS (JavaScript) detection
        {
          "type": "node",
          "style": "powerline",
          "background": "p:cyan",
          "foreground": "p:bg",
          "powerline_symbol": "\ue0b0",
          "template": " \ue718 {{ .Full }} "
        },

        // C/C++ detection via command segment
        {
          "type": "command",
          "style": "powerline",
          "background": "p:red",
          "foreground": "p:bg",
          "powerline_symbol": "\ue0b0",
          "template": " \ue61d C/C++ ",
          "properties": {
            "shell": "bash",
            "command": "[ -f Makefile ] || [ -f CMakeLists.txt ] || ls *.c *.cpp 1>/dev/null 2>&1",
            "exit_codes": [0]
          }
        },

        // Docker running check
        {
          "type": "docker",
          "style": "powerline",
          "background": "p:teal",
          "foreground": "p:bg",
          "powerline_symbol": "\ue0b0",
          "template": " \u25a3 Docker "
        },

        // Time
        {
          "background": "p:purple",
          "foreground": "p:bg",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "template": " \u2665 {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "\ue0b0",
          "type": "time"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}

