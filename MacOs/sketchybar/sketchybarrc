#!/usr/bin/env zsh
SKETCHYBAR_CONFIG="$HOME/.config/sketchybar"
PLUGIN_SHARED_DIR="$SKETCHYBAR_CONFIG/plugins" # Use SKETCHYBAR_CONFIG for consistency

#!/usr/bin/env zsh
FONT_FACE="JetBrainsMono Nerd Font"

# AE86 Trueno Color Scheme - Takumi's Panda Trueno
# Pearl White: 0xfff5f5f5 (upper body - slightly off-white like the real car)
# Deep Black: 0xff0a0a0a (lower half panda scheme)
# Racing Red: 0xffcc0000 (Project D/RedSuns accent - darker racing red)
# Tofu White: 0xfffffff8 (clean white like tofu delivery)
# Carbon Black: 0xff1a1a1a (trim and details)
# Headlight Yellow: 0xfffff4e6 (popup headlight glow)

sketchybar --bar \
    height=20 \
    color=0x00000000 \
    shadow=0x44000000 \
    margin=10 \
    sticky=on \
    padding_left=5 \
    padding_right=5 \
    y_offset=10 \
    blur_radius=20 \
    display=main

sketchybar --default \
    updates=when_shown \
    background.color=0xeef5f5f5 \
    background.corner_radius=5 \
    background.padding_right=5 \
    background.height=20 \
    icon.font="$FONT_FACE:Medium:15.0" \
    icon.padding_left=5 \
    icon.padding_right=5 \
    label.font="$FONT_FACE:Medium:12.0" \
    label.color=0xff0a0a0a \
    label.y_offset=0 \
    label.padding_left=0 \
    label.padding_right=10

# Front App - Racing Red like Project D livery
sketchybar --add item front_app left \
    --set front_app \
    background.color=0xffcc0000 \
    background.padding_left=0 \
    background.padding_right=0 \
    icon.y_offset=1 \
    icon.color=0xfffffff8 \
    label.drawing=no \
    script="$PLUGIN_SHARED_DIR/front_app.sh" \
    --add item front_app.separator left \
    --set front_app.separator \
    background.color=0x00000000 \
    background.padding_left=-3 \
    icon= \
    icon.color=0xffcc0000 \
    icon.font="$FONT_FACE:Bold:20.0" \
    icon.padding_left=0 \
    icon.padding_right=0 \
    icon.y_offset=1 \
    label.drawing=no \
    --add item front_app.name left \
    --set front_app.name \
    background.color=0xeef5f5f5 \
    background.padding_right=0 \
    icon.drawing=off \
    label.font="$FONT_FACE:Bold:12.0" \
    label.color=0xff0a0a0a \
    label.drawing=yes

sketchybar --add bracket front_app_bracket \
    front_app \
    front_app.separator \
    front_app.name \
    --subscribe front_app front_app_switched

# ---
## Current Workspace Indicator (Left Side)

# Tracks aerospace workspace changes
sketchybar --add event aerospace_workspace_change

# Add a single item showing current workspace
sketchybar --add item currentspace left \
    --subscribe currentspace aerospace_workspace_change \
    --set currentspace \
    background.color=0xffcc0000 \
    background.corner_radius=5 \
    background.height=20 \
    background.drawing=on \
    icon.color=0xfffffff8 \
    label.color=0xfffffff8 \
    label.padding_left=10 \
    label.padding_right=10 \
    script="$PLUGIN_SHARED_DIR/currentspace.sh"

# ---

# Clock - Tofu white with carbon black text
sketchybar --add item clock right \
    --set clock \
    icon=ó°ƒ° \
    icon.color=0xffcc0000 \
    label.color=0xff0a0a0a \
    update_freq=10 \
    script="$PLUGIN_SHARED_DIR/clock.sh"

# Battery - Carbon black background with tofu white text (panda scheme)
sketchybar --add item battery right \
    --set battery \
    background.color=0xee1a1a1a \
    update_freq=20 \
    script="$PLUGIN_SHARED_DIR/battery.sh"

# Volume - Racing red accent with pearl white background
sketchybar --add item volume right \
    --set volume \
    icon.color=0xffcc0000 \
    label.color=0xff0a0a0a \
    label.drawing=true \
    script="$PLUGIN_SHARED_DIR/volume.sh" \
    --subscribe volume volume_change

# Weather - Headlight yellow icon (like popup headlights at night)
sketchybar --add item weather right \
    --set weather \
    icon= \
    icon.color=0xfffff4e6 \
    icon.font="$FONT_FACE:Bold:15.0" \
    label.color=0xff0a0a0a \
    update_freq=1800 \
    script="$PLUGIN_SHARED_DIR/weather.sh" \
    --subscribe weather system_woke

##### Finalizing Setup #####
sketchybar --update
sketchybar --trigger aerospace_workspace_change
