{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "base": "#1e1e2e",
    "text": "#cdd6f4",
    "rosewater": "#f5e0dc",
    "flamingo": "#f2cdcd",
    "pink": "#f5c2e7",
    "mauve": "#cba6f7",
    "red": "#f38ba8",
    "maroon": "#eba0ac",
    "peach": "#fab387",
    "yellow": "#f9e2af",
    "green": "#a6e3a1",
    "teal": "#94e2d5",
    "sky": "#89dceb",
    "sapphire": "#74c7ec",
    "blue": "#89b4fa",
    "lavender": "#b4befe"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "#000000",
          "background": "p:red",
          "template": "{{ if .Env.PNPPSHOST }} \uf8c5 {{ .Env.PNPPSHOST }} {{ end }}"
        },
        {
          "type": "text",
          "style": "powerline",
          "foreground": "p:text",
          "background": "p:teal",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Env.PNPPSSITE }} \uf2dd {{ .Env.PNPPSSITE }}{{ end }}"
        },
        {
          "type": "text",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "foreground": "p:text",
          "background": "p:teal",
          "template": "{{ if .Env.PNPPSSITE }}\u00A0{{ end }}"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "background": "p:mauve",
          "foreground": "p:text",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "background": "p:peach",
          "foreground": "p:base",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "folder"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "p:green",
          "foreground": "p:base",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "display_stash_count": true,
            "display_status": true,
            "display_upstream_icon": true,
            "branch_icon": "\ue725",
            "branch_status_ahead_icon": "â†‘",
            "branch_status_behind_icon": "â†“",
            "branch_status_diverged_icon": "â‡„",
            "branch_status_up_to_date_icon": "âœ”"
          },
          "template": " \ue725 {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} âœŽ{{ end }}{{ if .Staging.Changed }} âœ”{{ end }}"
        },
        {
          "type": "python",
          "style": "powerline",
          "background": "p:yellow",
          "foreground": "p:base",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Venv }} \ue235 {{ .Venv }} {{ end }}"
        },
        {
          "type": "rust",
          "style": "powerline",
          "background": "p:maroon",
          "foreground": "p:base",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Full }} \ue7a8 {{ .Full }} {{ end }}"
        },
        {
          "type": "node",
          "style": "powerline",
          "background": "p:sky",
          "foreground": "p:base",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Full }} \ue718 {{ .Full }} {{ end }}"
        },
        {
          "type": "command",
          "style": "powerline",
          "background": "p:sapphire",
          "foreground": "p:base",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if eq .Code 0 }} \ue61d C/C++ {{ end }}",
          "properties": {
            "shell": "bash",
            "command": "sh -c '[ -f Makefile ] || [ -f CMakeLists.txt ] || ls *.c *.cpp 1>/dev/null 2>&1'",
            "exit_codes": [0],
            "ignore_error": true
          }
        },
        {
          "background": "p:lavender",
          "foreground": "p:base",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "template": " ðŸ¦„ {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "\ue0b0",
          "type": "time"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}

