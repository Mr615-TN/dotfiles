{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "base": "#000000",
    "text": "#ffffff",
    "ae86_white": "#f2f2f2",
    "ae86_black": "#1a1a1a",
    "red": "#e74c3c",
    "yellow": "#f1c40f",
    "blue": "#3498db",
    "green": "#2ecc71",
    "orange": "#f39c12",
    "purple": "#9b59b6",
    "gray": "#95a5a6"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:ae86_white",
          "style": "plain",
          "template": "[\uf1b9 {{ .UserName }}]",
          "type": "session"
        },
        {
          "foreground": "p:ae86_white",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": " \u276f ",
          "type": "text"
        },
        {
          "foreground": "p:ae86_white",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }}",
          "type": "path"
        },
        {
          "foreground": "p:red",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_stash_count": true
          },
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .Behind}} ↓{{ .Behind }}{{end}}{{if .Ahead}} ↑{{ .Ahead }}{{end}}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "p:yellow",
          "template": "{{ if .Venv }}[\ue235 {{ .Venv }}] {{ end }}"
        },
        {
          "type": "rust",
          "style": "plain",
          "foreground": "p:orange",
          "template": "{{ if .Full }}[\ue7a8 {{ .Full }}] {{ end }}"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:green",
          "template": "{{ if .Full }}[\ue718 {{ .Full }}] {{ end }}"
        },
        {
          "type": "command",
          "style": "plain",
          "foreground": "p:gray",
          "template": "{{ if eq .Code 0 }}[\ue61d C/C++] {{ end }}",
          "properties": {
            "shell": "bash",
            "command": "sh -c '[ -f Makefile ] || [ -f CMakeLists.txt ] || ls *.c *.cpp 1>/dev/null 2>&1'",
            "exit_codes": [0],
            "ignore_error": true
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:red",
          "style": "plain",
          "template": "\ue3bf ",
          "type": "root"
        },
        {
          "foreground": "p:red",
          "style": "plain",
          "template": "\u276f\u276f ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}
