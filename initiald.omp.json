{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,

  "palette": {
    "void": "#0b0b0b",
    "ash": "#d6d6d6",
    "bone": "#ffffff",
    "iron": "#1a1a1a",
    "steel": "#2a2a2a",

    "blood": "#8b0000",
    "blood_bright": "#ff2b2b",
    "dried_blood": "#7a3b3b",

    "gray": "#777777"
  },

  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:ash",
          "template": "☩ {{ .UserName }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:gray",
          "template": " :: "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:ash",
          "properties": {
            "style": "folder",
            "folder_separator_icon": "/"
          },
          "template": "{{ .Path }}"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:blood",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "branch_status_ahead_icon": "↑",
            "branch_status_behind_icon": "↓",
            "branch_status_diverged_icon": "⇄",
            "branch_status_up_to_date_icon": "·"
          },
          "template": " ⸸ {{ .HEAD }}{{ if .Working.Changed }} ✚{{ .Working.String }}{{ end }}{{ if .Staging.Changed }} ✦{{ .Staging.String }}{{ end }} {{ .BranchStatus }}{{ if gt .StashCount 0 }} ⚑ {{ .StashCount }}{{ end }}"
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "p:dried_blood",
          "template": "{{ if .Venv }} ⟦ py {{ .Venv }} ⟧{{ end }}"
        },
        {
          "type": "rust",
          "style": "plain",
          "foreground": "p:blood_bright",
          "template": "{{ if .Full }} ⟦ rs {{ .Full }} ⟧{{ end }}"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:gray",
          "template": "{{ if .Full }} ⟦ node {{ .Full }} ⟧{{ end }}"
        },
        {
          "type": "command",
          "style": "plain",
          "foreground": "p:steel",
          "template": " ⟦ C ⟧",
          "properties": {
            "shell": "bash",
            "command": "sh -c '[ -f Makefile ] || [ -f CMakeLists.txt ] || ls *.c *.cpp 1>/dev/null 2>&1'",
            "exit_codes": [0],
            "ignore_error": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:blood_bright",
          "template": "☩ "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:blood",
          "template": "❯❯ "
        }
      ]
    }
  ]
}

